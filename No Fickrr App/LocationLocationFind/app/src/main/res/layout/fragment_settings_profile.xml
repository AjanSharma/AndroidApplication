<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.ajans.locationlocationfind.SettingsProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#000">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/safety_nav_icon"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:padding="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/firstSettingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NAME"
                        android:textColor="#747373"
                        android:textSize="15dp"/>


                    <TextView
                        android:id="@+id/enterName"
                        android:layout_marginLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="15dp"/>

                </LinearLayout>
                <View
                    android:id="@+id/lineline"
                    android:layout_below="@id/firstSettingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a6a4a4">

                </View>
                <LinearLayout
                    android:id="@+id/secondSettingLayout"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/lineline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="EMAIL"
                        android:textColor="#747373"
                        android:textSize="15dp"/>


                    <TextView
                        android:id="@+id/enterEmail"
                        android:layout_marginLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:layout_marginBottom="15dp"/>


                </LinearLayout>

                <View

                    android:id="@+id/lineline1"
                    android:layout_below="@id/secondSettingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a6a4a4">

                </View>

                <LinearLayout
                    android:layout_below="@id/lineline1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aNum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="40dp"
                        android:src="@drawable/ic_contacts"/>

                    <ImageView
                        android:id="@+id/aMsg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="40dp"
                        android:src="@drawable/ic_email"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>



</FrameLayout>
